# Ansible managed

server {
    server_name {{ pterodactyl_panel_domain }} ;
	listen 80 ;
	listen [::]:80 ;

    # Allow challenge mode on http protocol
    {% if pterodactyl_panel_ssl_mode == "dehydrated" %}
    location ^~ /.well-known/acme-challenge {
        alias /var/lib/dehydrated/acme-challenges;
    }
    {% endif %}

    access_log /var/log/nginx/pterodactyl-port80-access.log;
    error_log  /var/log/nginx/pterodactyl-port80-error.log error;

    # http to https
    location / {
		return 301 https://$host$request_uri;
	}
}
server {
    server_name {{ pterodactyl_panel_domain }} ;
    listen 443 ssl ;
    listen [::]:443 ssl ;

    ssl_ciphers         HIGH:!aNULL:!MD5;

    # modern configuration
    ssl_protocols TLSv1.3;
    ssl_ecdh_curve X25519:prime256v1:secp384r1;
    ssl_prefer_server_ciphers off;

    {% if pterodactyl_panel_ssl_mode == "dehydrated" %}
        ssl_certificate     {{ pterodactyl_panel_dehydrated_ssl_cert }};
        ssl_certificate_key {{ pterodactyl_panel_dehydrated_ssl_key }};
        location ^~ /.well-known/acme-challenge {
            alias /var/lib/dehydrated/acme-challenges;
        }
    {% else %}
        ssl_certificate     {{ pterodactyl_panel_ssl_cert }};
        ssl_certificate_key {{ pterodactyl_panel_ssl_key }};
    {% endif %}

    {# 
    # See https://hstspreload.org/ before uncommenting the line below.
    # add_header Strict-Transport-Security "max-age=15768000; preload;";
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Robots-Tag none;
    add_header Content-Security-Policy "frame-ancestors 'self'";
    add_header X-Frame-Options DENY;
    add_header Referrer-Policy same-origin;
     #}

	root {{ pterodactyl_panel_webroot }}/public ;

    index index.php;

    access_log /var/log/nginx/pterodactyl.app-access.log;
    error_log  /var/log/nginx/pterodactyl.app-error.log error;

    # allow larger file uploads and longer script runtimes
    client_max_body_size {{ pterodactyl_panel_upload_limit | lower }};
    client_body_timeout 120s;

    sendfile off;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        try_files $uri =404;
        
        # WARNING : this must be generic we can have php7.x, php8.2 or 8.3 or....
        fastcgi_pass unix:/run/php/php-fpm.sock; 
        
        # Common part
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param PHP_VALUE "upload_max_filesize = {{ pterodactyl_panel_upload_limit }} \n post_max_size={{ pterodactyl_panel_upload_limit }}";
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTP_PROXY "";
        fastcgi_intercept_errors off;
        fastcgi_buffer_size 16k;
        fastcgi_buffers 4 16k;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 300;
        fastcgi_read_timeout 300;
    }
}
